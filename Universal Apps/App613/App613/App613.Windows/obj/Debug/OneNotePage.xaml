<Page
    x:Class="App613.OneNotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App613"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="Black">
        <ScrollViewer>
            <StackPanel Margin="15,40,15,10" ScrollViewer.VerticalScrollBarVisibility="Auto">

                <Button x:ConnectionId='1' x:Name="signInButton" Content="Sign In" IsEnabled="False"                           />
                <Button x:ConnectionId='2' x:Name="createPageButton" Content="Create Page" IsEnabled="False"                                />

                <TextBlock x:Name="infoTextBlock" TextWrapping="Wrap" />

            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Page>

